<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content" android:layout_width="match_parent"
    android:orientation="horizontal">
    <Button android:id="@+id/CustomizerOkButton"
    	android:layout_height="match_parent" android:layout_width="0dp" android:layout_weight="1"
  		android:text="@android:string/ok" android:gravity="center" />
  	<Button android:id="@+id/CustomizerCancelButton"
  		android:layout_height="match_parent" android:layout_width="0dp" android:layout_weight="1"
  		android:text="@android:string/cancel" android:gravity="center" />
  	<Button android:id="@+id/CustomizerMoreSettingsButton"
  		android:layout_height="match_parent" android:layout_width="0dp" android:layout_weight="1"
  		android:text="@string/settings" android:gravity="center" />
</LinearLayout>