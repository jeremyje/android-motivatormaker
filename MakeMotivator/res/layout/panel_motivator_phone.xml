<?xml version="1.0" encoding="utf-8"?>
<com.futonredemption.makemotivator.widget.ScaledCompositeLayout android:id="@+id/PosterRootScaledCompositeLayout"
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/Poster"
	android:layout_width="match_parent" android:layout_height="match_parent">
	
	<ImageView android:id="@+id/PictureFrameView"
	    android:layout_width="wrap_content" android:layout_height="wrap_content"
		style="@style/PictureFrame" />
		
	<ImageView android:id="@+id/PictureFramePaddingView"
	    android:layout_width="wrap_content" android:layout_height="wrap_content"
        style="@style/PictureFramePadding" />

    <include layout="@layout/panel_panzoompicture" android:id="@+id/PanZoomPictureRelativeLayout"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        style="@style/Picture" />
	
</com.futonredemption.makemotivator.widget.ScaledCompositeLayout>
